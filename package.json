{
  "name": "module-federation",
  "displayName": "module-federation",
  "description": "",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/musienkoyuriy/mf-vs-extension"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": ["onStartupFinished"],
  "contributes": {
    "commands": [
      {
        "command": "moduleFederation.refreshEntry",
        "title": "MF: Refresh federated remotes",
        "icon": {
          "dark": "resources/dark/refresh-dark.svg",
          "light": "resources/dark/refresh-dark.svg"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mf",
          "title": "Module Federation",
          "icon": "media/mf.png"
        }
      ]
    },
    "views": {
      "mf": [
        {
          "id": "moduleFederation",
          "name": "Module Federation",
          "icon": "media/mf.svg",
          "contextualTitle": "Module Federation"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "moduleFederation.refreshEntry",
          "when": "view == moduleFederation",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/esprima": "^4.0.3",
    "@types/express": "^4.17.17",
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "~18.13.0",
    "@types/vscode": "^1.75.0",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "@typescript-eslint/parser": "^5.51.0",
    "esprima": "^4.0.1",
    "express": "^4.18.2",
    "node-fetch": "^3.3.0"
  }
}
